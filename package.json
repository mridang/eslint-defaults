{
  "name": "@mridang/eslint-defaults",
  "type": "module",
  "scripts": {
    "prepack": "tsc",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "build": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --config=jest.config.mjs --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --config=jest.config.mjs --runInBand --detectOpenHandles",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run build && npx eslint .",
    "lint:fix": "npm run build && npx eslint . --fix"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "Mridang Agarwalla <mridang.agarwalla@gmail.com> (https://github.com/mridang)",
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "description": "A set of sane default for the NestJS framework",
  "private": false,
  "peerDependencies": {
    "eslint": ">=9"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mridang/eslint-defaults.git"
  },
  "homepage": "https://github.com/mridang/eslint-defaults",
  "bugs": {
    "url": "https://github.com/mridang/eslint-defaults/issues"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@tsconfig/node22": "^22.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "minimatch": "^10.0.1",
    "jest": "^30.2.0",
    "knip": "^5.75.1",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@html-eslint/eslint-plugin": "^0.51.0",
    "@html-eslint/parser": "^0.51.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": ">=9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-perfectionist": "^5.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.15.1",
    "eslint-plugin-toml": "^0.12.0",
    "eslint-plugin-yml": "^1.19.1",
    "globals": "^16.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "version": "1.6.0"
}
