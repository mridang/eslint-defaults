{
	"name": "@mridang/eslint-defaults",
	"scripts": {
		"prepack": "tsc",
		"build": "tsc",
		"test": "jest --verbose --config=jest.config.js --runInBand",
		"test:watch": "npm run test -- --watch",
		"test:debug": "jest --verbose --config=jest.config.js --runInBand --detectOpenHandles",
		"format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,md,html}\"",
		"format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,css,md,html}\"",
		"lint": "npx eslint .",
		"lint:fix": "npx eslint . --fix"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"keywords": [
		"eslint"
	],
	"author": {
		"name": "Mridang Agarwalla",
		"email": "mridang.agarwalla@gmail.com",
		"url": "https://github.com/mridang"
	},
	"files": [
		"dist"
	],
	"license": "ISC",
	"description": "A set of sane default for the NestJS framework",
	"private": false,
	"peerDependencies": {
		"eslint": "^8.0.1"
	},
	"engines": {
		"node": "20.x"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mridang/eslint-defaults.git"
	},
	"homepage": "https://github.com/mridang/eslint-defaults",
	"bugs": "https://github.com/mridang/eslint-defaults/issues",
	"devDependencies": {
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^10.0.5",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.0",
		"@tsconfig/node20": "latest",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.3.2",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "^29.7.0",
		"prettier": "^3.1.1",
		"semantic-release": "^24.0.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.1.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {

	}
}
