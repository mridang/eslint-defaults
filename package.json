{
	"name": "@mridang/eslint-defaults",
	"scripts": {
		"prepack": "tsc",
		"build": "tsc",
		"test": "jest --verbose --config=jest.config.js --runInBand",
		"test:watch": "npm run test -- --watch",
		"test:debug": "jest --verbose --config=jest.config.js --runInBand --detectOpenHandles",
		"format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,md,html}\"",
		"format:check": "prettier --check \"**/*.{js,ts,jsx,tsx,json,css,md,html}\"",
		"lint": "npx eslint .",
		"lint:fix": "npx eslint . --fix"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"keywords": [
		"eslint",
		"eslintplugin",
		"eslint-plugin"
	],
	"author": {
		"name": "Mridang Agarwalla",
		"email": "mridang.agarwalla@gmail.com",
		"url": "https://github.com/mridang"
	},
	"files": [
		"dist"
	],
	"license": "ISC",
	"description": "A set of sane default for the NestJS framework",
	"private": false,
	"peerDependencies": {
		"eslint": "^8.0.0"
	},
	"engines": {
		"node": "20.x"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mridang/eslint-defaults.git"
	},
	"homepage": "https://github.com/mridang/eslint-defaults",
	"bugs": "https://github.com/mridang/eslint-defaults/issues",
	"devDependencies": {
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^10.0.5",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.0",
		"@tsconfig/node20": "latest",
		"@types/eslint": "^9.6.1",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.3.2",
		"dotenv": "^16.4.5",
		"jest": "^29.7.0",
		"prettier": "^3.1.1",
		"semantic-release": "^24.0.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"@eslint/js": "^8.57.1",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.3",
		"eslint-plugin-cypress": "^3.5.0",
		"eslint-plugin-import": "^2.30.0",
		"eslint-plugin-json": "^4.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.0",
		"eslint-plugin-markdown": "^5.1.0",
		"eslint-plugin-no-unsanitized": "^4.1.1",
		"eslint-plugin-perfectionist": "^3.7.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.37.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-tailwindcss": "^3.17.4",
		"eslint-plugin-testing-library": "^6.3.0",
		"globals": "^15.9.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"version": "1.1.0"
}
